= form_for(@town) do |f|
  - if @town.errors.any?
    #error_explanation
      %h2
        = pluralize(@town.errors.count, "error")
        prohibited this town from being saved:
      %ul
        - @town.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit
