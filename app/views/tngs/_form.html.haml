= form_for(@tng) do |f|
  - if @tng.errors.any?
    #error_explanation
      %h2
        = pluralize(@tng.errors.count, "error")
        prohibited this tng from being saved:
      %ul
        - @tng.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :trainer_id
    %br/
    = f.select :trainer_id, Trainer.all.map { |trainer| [trainer.name, trainer.id] }, {include_blank: true}
  .field
    = f.label :discipline_id
    %br/
    = f.select :discipline_id, Discipline.all.map {|dis| [dis.id, dis.name]}, {include_blank: true}
  .field
    = f.label :town_id
    %br/
    = f.select :town_id, Town.all.map {|town| [town.name, town.id] }, {include_blank: true}
  .field
    = f.label :day
    %br/
    = f.text_field :day
  .field
    = f.label :time
    %br/
    = f.time_select :time
  .actions
    = f.submit
