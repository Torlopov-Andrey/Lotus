= form_for(@visit) do |f|
  - if @visit.errors.any?
    #error_explanation
      %h2
        = pluralize(@visit.errors.count, "error")
        prohibited this visit from being saved:
      %ul
        - @visit.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :user_id
    %br/
    = f.number_field :user_id
  .field
    = f.label :tng_id
    %br/
    = f.number_field :tng_id
  .field
    = f.label :date
    %br/
    = f.date_select :date
  .actions
    = f.submit
