= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :card
    %br/
    = f.number_field :card
  .field
    = f.label :phone
    %br/
    = f.text_field :phone
  .field
    = f.label :admin
    %br/
    = f.check_box :admin
  .actions
    = f.submit
